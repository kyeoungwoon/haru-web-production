{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"],
      "@lib/*": ["lib/*"],
      "@icons/*": ["common/components/icons/*"],
      "@svgs/*": ["assets/svgs/*"],
      "@common/types/*": ["common/types/*"],
      "@common/constants/*": ["common/constants/*"],
      "@common/utils/*": ["common/utils/*"],
      "@common/hooks/*": ["common/hooks/*"],
      "@common/queries/*": ["common/queries/*"],
      "@common/mutations/*": ["common/mutations/*"],
      "@common/apis/*": ["common/apis/*"],
      "@common/components/*": ["common/components/*"],
      "@common/stores/*": ["common/stores/*"],
      "@common/*": ["common/*"],
      "@buttons/*": ["common/components/buttons/*"],
      "@features/*": ["features/*"],
      "@/*": ["*"]
    }
  },
  "include": ["image-modules.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"]
}
